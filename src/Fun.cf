-- Boolean arithmetic's operations
ELog.           Exp   ::= Exp LogOpr Exp1;
EEq.            Exp1  ::= Exp1 EqOpr Exp2;
ERel.           Exp2  ::= Exp2 RelOpr Exp3;
EAdd.           Exp3  ::= Exp3 AddOpr Exp4;
EMul.      	    Exp4  ::= Exp4 MulOpr Exp5;
EConst.         Exp5  ::= Constant;

coercions Exp 5;

-- Constant
CInt.           Constant ::= Integer;
CTrue.	        Constant ::= "true";
CFalse.	        Constant ::= "false";


-- Operators
-- Logical Operators
OOr.  LogOpr ::= "or";
OAnd. LogOpr ::= "and";
-- Equality Operators
OEq.  EqOpr  ::= "==";
ONeq. EqOpr  ::= "!=";
-- Relational Operators
OLes. RelOpr ::= "<";
OGrt. RelOpr ::= ">";
OLeq. RelOpr ::= "<=";
OGeq. RelOpr ::= ">=";
--
OAdd. AddOpr ::= "+";
OSub. AddOpr ::= "-";
--
OMul. MulOpr ::= "*";
ODiv. MulOpr ::= "/";